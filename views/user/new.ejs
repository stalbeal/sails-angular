<div class="container" ng-app="UserModule" >
	<!-- Page Layout here -->
	<div class="row" ng-controller="signUpFormController" ng-cloak>
		
		

		<div class="col s12 m4 l6"> <!-- Note that "m4 l3" was added -->
		
		<h1 class="white-text myFont">habitApp</h1>
		<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/5a/Smartphone_white.svg/200px-Smartphone_white.svg.png" alt="">
		</div><!--fin col-->
		<div class="col s12 m8 l6"> <!-- Note that "m8 l9" was added -->
		
		<div class="card ">
			<div class="card-content ">
				<span class="card-title black-text">Regístrate</span>
				<form ng-submit="submitSignupForm()" id="main-contact-form" class="contact-form row" name="contact-form" >
					
					<div class="input-field col s8 offset-s2 ">
						<input id="fullName" ng-model="user.fullName" type="text" class="validate" required>
						<label for="fullName">Nombre Completo</label>
					</div>
					<div class="input-field col s8 offset-s2 ">
						<input id="mobile" ng-model="user.mobile" type="number" class="validate" >
						<label for="mobile">Celular</label>
					</div>
					
					<div class="input-field col s8 offset-s2 ">
						<input id="email" ng-model="user.email" type="email" class="validate" required>
						<label for="email">Correo electrónico</label>
					</div>
					
					<div class="input-field col s8 offset-s2 ">
						<input id="username" ng-model="user.username" type="text" class="validate" required>
						<label for="username">Nombre de usuario</label>
						
					</div>
					<div class="input-field col s8 offset-s2 ">
						<input id="password" ng-model="user.password" type="password" class="validate" required>
						<label for="password">Contraseña	</label>
						
					</div>
					<div class="input-field col s8 offset-s2 ">
						<input id="passwordConfirmation" ng-model="user.passwordConfirmation" type="password" class="validate" required>
						<label for="passwordConfirmation">Confirmación de contraseña</label>
					</div>
					<div class="row">
						<div class="input-field col s10">
							<button  type="submit" name="submit" class="btn waves-effect waves-light right red darken-2" >Guardar</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
</div>