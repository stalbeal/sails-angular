
<div class="row">
	<p class="heading h1">Categorías</p>
	<div class="col-sm-12" style="overflow: auto;  ">
		<row>
		<div class="input-field col s4 right">
			
			
			<input type="search" class="form-control" id="input-filter" size="10" >
			<label for="input-filter">Buscar:</label>
		</div>
		</row>
		<table id="table"   class="hoverable centered" >
			<thead >
				<th width="20%">Nombre</th>
				
				<!--<th>Sitio</th>-->
				
				<th width="20%" colspan="2" class="text-center">Acciones</th>
			</thead>
		</table>
	</div>
	<div class="col-sm-12" style="overflow: auto; height: 500px;">
		<table id="table"  class="bordered hoverable " >
			<%var m=0%>
			<% _.each(categories, function(category) { %>
			<tr>
				<%m++%>
				<td width="20%"><%=category.name%></td>
				
				<td width="20%" colspan="4">
					<center><a href="/category/show/<%=category.id%>" class="tooltipped" data-tooltip="Ver" style="text-decoration: none; color: blue;">
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
					
					<a href="/category/edit/<%=category.id%>"  class="tooltipped" data-tooltip="Editar" style="text-decoration: none; color: green;">
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>

					<a class="open-modal tooltipped" data-tooltip="Eliminar(Toda la información relacionada a ésta se eliminará también)"  href="/category/destroy/<%=category.id%>" style="text-decoration: none; color: red;"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
					<!-- <input class="appide"  id="input" type="hidden" value="<category.name%>" />
					<input class="appid"  id="input" type="hidden" value="<category.id%>" /></a> -->
					
					</center>
				</td>
			</tr>
			
			<%})%>
		</table>
	</div>
</div>