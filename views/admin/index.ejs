<div class="row">
	<p class="heading h1">Administradores</p>
	<div class="col-sm-12" style="overflow: auto;  ">
		<row>
		<div class="input-field col s4 right">
			
			
			<input type="search" class="form-control" id="input-filter" size="10" >
			<label for="input-filter">Buscar:</label>
		</div>
		</row>
		<table id="table"   class="hoverable centered" >
			<thead >
				<th width="20%">Nombre Completo</th>
				<th width="20%">Nombre de Usuario</th>
				<th width="20%">Email</th>
				<th width="20%" >Celular</th>
				
				<!--<th>Sitio</th>-->
				
				<th width="20%" colspan="2" class="text-center hide-on-small-only">Acciones</th>
			</thead>
		</table>
	</div>
	<div class="col-sm-12" style="overflow: auto; height: 500px;">
		<table id="table"  class="bordered hoverable " >
		
			<%var m=0%>
			<% _.each(admins, function(admin) { %>
			<tr>
				<%m++%>
				<td width="20%"><%=admin.fullName%></td>
				<td width="20%"><%=admin.username%></td>
				<td width="20%"><%=admin.email%></td>
				<td width="20%" ><%=admin.mobile%></td>
				
				<td width="20%" colspan="4" class="hide-on-small-only">
					<center><a href="/admin/show/<%=admin.id%>" class="tooltipped" data-tooltip="Ver" style="text-decoration: none; color: blue;">
						<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
						
						<a href="/admin/edit/<%=admin.id%>"  class="tooltipped" data-tooltip="Editar" style="text-decoration: none; color: green;">
							<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
							<a class="open-modal tooltipped" data-tooltip="Eliminar(Toda la información relacionada a ésta se eliminará también)"  href="/admin/destroy/<%=admin.id%>" style="text-decoration: none; color: red;"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
							
							
							</center>
						</td>
					</tr>
					
					<%})%>
				</table>
			</div>
		</div>